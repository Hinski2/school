@model EShop.Domain.Product
@using EShop.Shared

@{
    ViewData["Title"] = "Edytuj produkt";
}

<h2>Edytuj produkt</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="form-group mb-3">
                <label class="control-label">Nazwa</label>
                <input name="name" value="@Model.Name" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Opis</label>
                <input name="description" value="@Model.Description" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Cena</label>
                <input name="price" type="number" step="0.01" value="@Model.Price.Amount.ToString("F2").Replace(",",".")" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Jednostka</label>
                <select name="unit" class="form-control" asp-items="Html.GetEnumSelectList<UnitType>()"></select>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">URL Obrazka</label>
                <input name="pictureUrl" value="@Model.PictureUrl" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Zapisz zmiany" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>