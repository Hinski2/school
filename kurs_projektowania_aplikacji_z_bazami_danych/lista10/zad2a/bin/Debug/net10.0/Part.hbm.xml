<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="zad2a" namespace="zad2a">

	<class name="Part" table="Part">
		<id name="Id">
			<generator class="native"/>
		</id>

		<discriminator column="Discriminator" type="string"/>

		<property name="OEM"/>
		<property name="Manufacturer"/>
		<property name="Number"/>
		<property name="Description"/>

		<subclass name="Tire" discriminator-value="Tire">
			<property name="Speed"/>
			<property name="Rating"/>

			<subclass name="NewTire" discriminator-value="NewTire">
				<property name="OnStock"/>
			</subclass>

			<subclass name="UsedTire" discriminator-value="UsedTire">
				<property name="ProductionYear"/>
				<property name="ConsumptionLevel"/>

				<subclass name="RefurbishedTire" discriminator-value="RefurbishedTire">
					<property name="ConsumptionLevelAfterFixing"/>
				</subclass>
				
			</subclass>
			
		</subclass>
	</class>
</hibernate-mapping>