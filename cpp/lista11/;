#include <bits/stdc++.h>
using namespace std;

template<typename T> 
struct OnStack {
    T value; 

    template<typename... Args>
    OnStack(Args... args) : value(forward<Args>(args)...) {

    }

    T& operator*() {
        return value;
    }

    T& operator->() {
        return &value;
    }
}

template<typename T> 
struct ObjHolder {
    using type = typename conditional<
        (sizeof(T) <= sizeof(string)) && !is_array<T>::value,
        OnStack<T>,
        OnHeap<T>,
    >::type;
};

int main() {

}
